<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvEventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Havelock Drive Temple"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_on_bg"
                android:fontFamily="sans-serif-medium"
                android:layout_toStartOf="@+id/btnDeleteEvent" />

            <ImageButton
                android:id="@+id/btnDeleteEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Delete event"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvEventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 Sept 2024"
            android:textColor="@color/text_secondary_on_bg"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvEventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 pm"
            android:textColor="@color/text_secondary_on_bg"
            android:layout_marginTop="2dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/layoutEventDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textStyle="bold"
                android:textColor="@color/text_on_bg"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvEventDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event description goes here"
                android:textColor="@color/text_secondary_on_bg"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location:"
                android:textStyle="bold"
                android:textColor="@color/text_on_bg"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvEventLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event location goes here"
                android:textColor="@color/text_secondary_on_bg"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Requirements:"
                android:textStyle="bold"
                android:textColor="@color/text_on_bg"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvEventRequirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event requirements go here"
                android:textColor="@color/text_secondary_on_bg"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dress Code:"
                android:textStyle="bold"
                android:textColor="@color/text_on_bg"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvEventDressCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event dress code goes here"
                android:textColor="@color/text_secondary_on_bg"
                android:layout_marginTop="2dp" />

            <LinearLayout
                android:id="@+id/layoutMedia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Media:"
                    android:textStyle="bold"
                    android:textColor="@color/text_on_bg" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <LinearLayout
                        android:id="@+id/layoutMediaItems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutDocuments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Documents:"
                    android:textStyle="bold"
                    android:textColor="@color/text_on_bg" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/documentsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnToggleDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Details"
            android:layout_marginTop="8dp"
            style="@style/AppButton.Info" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView> 