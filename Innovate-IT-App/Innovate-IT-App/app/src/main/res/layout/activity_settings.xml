<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <!-- Reusable header card -->
        <include layout="@layout/include_header_card" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="false"
        android:clipToPadding="false"
        android:paddingBottom="120dp"
        android:overScrollMode="always">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">
                <TextView
                    android:id="@+id/tvThemeLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/text_on_bg" />
                <Switch
                    android:id="@+id/switchTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdateAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Update Account"
                style="@style/AppButton.Primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMyUploads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="My Uploads &amp; Status"
                style="@style/AppButton.Info" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPendingEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="My Event Requests (Pending)"
                style="@style/AppButton.Info" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHelpFaq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Help"
                style="@style/AppButton.Info"
                app:icon="@drawable/ic_help"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconTint="@color/black" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogoutSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Logout"
                style="@style/AppButton.Neutral" />

        </LinearLayout>
    </ScrollView>


        <!-- Include the navigation bar (default height for consistency) -->
        <include layout="@layout/navigation_bar" />
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>


