<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.CalendarDate" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.CalendarWeekDay" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Button styles -->
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/button_text</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textStyle">bold</item>
        <item name="iconTint">@color/black</item>
        <item name="elevation">6dp</item>
    </style>

    <style name="AppButton.Primary" parent="AppButton">
        <item name="backgroundTint">@color/button_primary</item>
    </style>

    <style name="AppButton.Success" parent="AppButton">
        <item name="backgroundTint">@color/button_success</item>
    </style>

    <style name="AppButton.Danger" parent="AppButton">
        <item name="backgroundTint">@color/button_danger</item>
    </style>

    <style name="AppButton.Warning" parent="AppButton">
        <item name="backgroundTint">@color/button_warning</item>
    </style>

    <style name="AppButton.Info" parent="AppButton">
        <item name="backgroundTint">@color/button_info</item>
    </style>

    <style name="AppButton.Neutral" parent="AppButton">
        <item name="backgroundTint">@color/button_neutral</item>
    </style>
</resources>


