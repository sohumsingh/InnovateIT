<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:background="@drawable/bg_gradient_home">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:fitsSystemWindows="true">

        <!-- Modern Header with Logo -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/temple_gold"
            app:strokeColor="@color/temple_green"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageButton
                    android:id="@+id/btnMenu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Menu"
                    android:src="@drawable/ic_menu" />

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/temple_logo_nataraja"
                    android:contentDescription="Umbilo Temple Logo"
                    android:layout_marginBottom="6dp"
                    android:elevation="2dp"/>

                <TextView
                    android:id="@+id/tvHomeHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Umbilo Temple"
                    android:textColor="@color/text_on_bg"
                    android:textSize="24sp"
            android:fontFamily="serif"
                    android:letterSpacing="0.06" />
                    
                <View
                    android:layout_width="60dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/temple_orange"
                    android:alpha="0.7"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
            
        <TextView
            android:id="@+id/tvWelcomeUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Welcome"
            android:textColor="@color/text_secondary_on_bg"
            android:textSize="16sp"
            android:fontFamily="casual"
            android:letterSpacing="0.08" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="false"
            android:clipToPadding="false"
            android:paddingBottom="120dp"
            android:overScrollMode="always">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="40dp"
                android:minHeight="600dp">

            <!-- Latest Gallery Section -->
            <TextView
                android:id="@+id/tvLatestGalleryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:text="Latest from Gallery"
                android:textColor="@color/text_on_bg"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvLatestGallery"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="4dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSeeGallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center_horizontal"
                android:text="See Gallery"
                style="@style/AppButton.Info"
                app:icon="@drawable/ic_gallery"
                app:iconPadding="12dp" />

            <!-- Upcoming Event Section -->
            <TextView
                android:id="@+id/tvUpcomingEventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:text="Upcoming Event"
                android:textColor="@color/text_on_bg"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardUpcomingEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/temple_gold"
                app:strokeColor="@color/temple_green"
                app:strokeWidth="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:id="@+id/tvUpcomingEventName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Event title"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium" />
                    <TextView
                        android:id="@+id/tvUpcomingEventDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Date"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpcomingEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp"
                android:text="Check out our upcoming events"
                style="@style/AppButton.Info"
                android:maxLines="2"
                android:ellipsize="none"
                app:icon="@drawable/ic_events"
                app:iconPadding="12dp" />

            <!-- External website CTA -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVisitWebsite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="12dp"
                android:text="Learn more about us â€” Visit our website"
                style="@style/AppButton.Neutral"
                app:icon="@drawable/ic_documents"
                app:iconPadding="10dp"
                android:layout_gravity="center_horizontal" />

            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:padding="12dp"
                android:useDefaultMargins="true">

            <!-- Events Button -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardEvents"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:visibility="gone"
                app:cardCornerRadius="24dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/temple_gold"
                app:strokeColor="@color/temple_green"
                app:strokeWidth="2dp"
                app:rippleColor="@color/temple_orange"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_events"
                        android:contentDescription="Events Icon"
                        app:tint="@color/temple_orange"
                        android:elevation="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Events"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.05" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Donate Button -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDonate"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:visibility="gone"
                app:cardCornerRadius="24dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/temple_gold"
                app:strokeColor="@color/temple_green"
                app:strokeWidth="2dp"
                app:rippleColor="@color/temple_orange"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_donate"
                        android:contentDescription="Donate Icon"
                        app:tint="@color/temple_orange"
                        android:elevation="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Donate"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:letterSpacing="0.02" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Gallery Button -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardGallery"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:visibility="gone"
                app:cardCornerRadius="24dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/temple_gold"
                app:strokeColor="@color/temple_green"
                app:strokeWidth="2dp"
                app:rippleColor="@color/temple_orange"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_gallery"
                        android:contentDescription="Gallery Icon"
                        app:tint="@color/temple_orange"
                        android:elevation="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Gallery"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:letterSpacing="0.02" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Documents Button -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDocuments"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:visibility="gone"
                app:cardCornerRadius="24dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/temple_gold"
                app:strokeColor="@color/temple_green"
                app:strokeWidth="2dp"
                app:rippleColor="@color/temple_orange"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_documents"
                        android:contentDescription="Documents Icon"
                        app:tint="@color/temple_orange"
                        android:elevation="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Documents"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:letterSpacing="0.02" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Logout Button (moved to Settings, hide here) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardLogout"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:visibility="gone"
                app:cardCornerRadius="24dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/temple_gold"
                app:strokeColor="@color/temple_green"
                app:strokeWidth="2dp"
                app:rippleColor="@color/temple_orange"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_logout"
                        android:contentDescription="Logout Icon"
                        app:tint="@color/temple_orange"
                        android:elevation="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Logout"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:letterSpacing="0.02" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            
            <!-- Admin Button -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAdmin"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:visibility="gone"
                app:cardCornerRadius="24dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/temple_orange"
                app:strokeWidth="0dp"
                app:rippleColor="@color/temple_orange_dark"
                android:foreground="?attr/selectableItemBackgroundBorderless">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:src="@drawable/ic_events"
                        android:contentDescription="Admin Icon"
                        app:tint="@color/white"
                        android:elevation="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Admin"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:letterSpacing="0.02" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            </GridLayout>
            
            </LinearLayout>
        </ScrollView>

        <!-- Include the navigation bar -->
        <include layout="@layout/navigation_bar" />
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>

