<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/white">

    <View
        android:id="@+id/viewCategoryIndicator"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="#1976D2"
        android:layout_marginEnd="8dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAgendaEventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00 AM - 11:30 AM"
            android:textStyle="bold"
            android:textColor="@color/text_secondary_on_bg" />

        <TextView
            android:id="@+id/tvAgendaEventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Title"
            android:textSize="16sp"
            android:textColor="@color/text_on_bg"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvAgendaEventLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Location"
            android:textStyle="italic"
            android:textColor="@color/text_secondary_on_bg"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivAgendaEventCategory"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_menu_info_details"
        android:layout_gravity="center_vertical"
        android:contentDescription="Event Category" />
</LinearLayout>
