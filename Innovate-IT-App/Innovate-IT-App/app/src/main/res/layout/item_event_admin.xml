<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvEventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_on_bg"
                android:fontFamily="sans-serif-medium"
                android:layout_toStartOf="@+id/btnDeleteEvent" />

            <ImageButton
                android:id="@+id/btnDeleteEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Delete event"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvEventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textColor="@color/text_secondary_on_bg"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvEventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textColor="@color/text_secondary_on_bg"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvEventLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="@color/text_secondary_on_bg"
            android:layout_marginTop="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Details"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:background="@drawable/modern_button_background"
            app:cornerRadius="16dp"
            app:elevation="2dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
