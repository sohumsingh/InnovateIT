@model UmbiloTemple.Models.TempleInfo
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero d-flex align-items-center justify-content-center text-center text-yellow py-5"
         style="background: url('/images/templehero.jpg') center/cover no-repeat; min-height: 80vh;">
    <div class="container position-relative">
        <h1 class="display-4 fw-bold">Welcome to The Umbilo Shree Ambalavaanar Alayam</h1>
        <p class="lead text-light">A sacred space for devotion, culture, and community.</p>
        <a asp-controller="Donations" asp-action="Index" class="btn btn-temple btn-lg mt-3">Donate Today</a>
    </div>
</section>

<!-- About Preview -->
<section class="py-5 text-center">
    <div class="container">
        <h2 class="text-yellow mb-3">Our Heritage</h2>
        <p class="lead mx-auto text-light" style="max-width:800px;">
            Founded in the late 1800s and declared a National Monument in 1980, Umbilo Temple stands
            as one of Durban’s oldest spiritual landmarks — preserving faith, culture, and unity for 150 years.
        </p>
        <a asp-controller="About" asp-action="Index" class="btn btn-outline-light mt-3">Learn More</a>
    </div>
</section>

<!-- Highlights Section -->
<section class="py-5 bg-darker text-center">
    <div class="container">
        <h2 class="text-yellow mb-5">What We Do</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card p-4 h-100">
                    <i class="fas fa-praying-hands fa-3x text-yellow mb-3"></i>
                    <h4>Religious Services</h4>
                    <p class="text-light">Regular poojas, cultural rituals, and festive celebrations connecting generations.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-4 h-100">
                    <i class="fas fa-hands-helping fa-3x text-yellow mb-3"></i>
                    <h4>Community Support</h4>
                    <p class="text-light">Charity drives, educational programs, and cultural awareness initiatives for the community.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-4 h-100">
                    <i class="fas fa-calendar-alt fa-3x text-yellow mb-3"></i>
                    <h4>Annual Events</h4>
                    <p class="text-light">From Diwali to temple anniversaries — we celebrate unity and tradition all year round.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5 text-center">
    <div class="container">
        <h3 class="fw-bold text-yellow">Be part of our journey.</h3>
        <p class="lead text-light">Support, volunteer, or simply visit us to experience our spiritual heritage.</p>
        <a asp-controller="Contact" asp-action="Index" class="btn btn-temple mt-2">Get in Touch</a>
    </div>
</section>


