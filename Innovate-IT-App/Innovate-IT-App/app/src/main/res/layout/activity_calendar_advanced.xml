<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_events"
    tools:context=".CalendarActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_gravity="fill">

    <!-- Reusable header card -->
    <include layout="@layout/include_header_card" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="false"
        android:clipToPadding="false"
        android:paddingBottom="120dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp">

        <Button
            android:id="@+id/btnMonthView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Month"
            android:textSize="12sp"
            android:layout_marginEnd="4dp"
            style="@style/TempleButton" />

        <Button
            android:id="@+id/btnAgendaView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Agenda"
            android:textSize="12sp"
            android:layout_marginStart="4dp"
            style="@style/TempleButton" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp">

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:dateTextAppearance="@style/TextAppearance.CalendarDate"
            android:weekDayTextAppearance="@style/TextAppearance.CalendarWeekDay"
            android:visibility="visible" />

        <include
            android:id="@+id/agendaView"
            layout="@layout/calendar_agenda_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tvSelectedDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Selected Date"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:textColor="@color/text_on_bg"
            android:background="@drawable/bg_surface_highlight" />

        <Button
            android:id="@+id/btnToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:layout_marginStart="8dp"
            style="@style/TempleButton.Outlined" />
    </LinearLayout>

    <!-- Search in events for selected date -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:startIconDrawable="@android:drawable/ic_menu_search"
        app:endIconMode="clear_text"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearchCalendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search events..." />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp">

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/colorSurface"
            android:padding="8dp" />

        <Button
            android:id="@+id/btnClearFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:layout_marginStart="8dp"
            style="@style/TempleButton.Outlined" />
    </LinearLayout>

    <Button
        android:id="@+id/btnRequestBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“… Request Temple Booking for Selected Date"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp" />

    <!-- Empty-state message placed above the list so it never sits behind the nav bar -->
    <TextView
        android:id="@+id/tvNoEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:gravity="center"
        android:text="No events for this date"
        android:textSize="18sp"
        android:textColor="@color/text_on_bg"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/eventsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:clipToPadding="false"
            android:paddingBottom="72dp" />

        
    </FrameLayout>

    </LinearLayout>
    </ScrollView>

    <!-- Include the navigation bar to match other pages (inside content column) -->
    <include 
        layout="@layout/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp" />

</LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
