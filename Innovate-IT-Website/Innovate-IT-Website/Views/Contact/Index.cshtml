@model UmbiloTemple.Models.ContactMessage
@{
    ViewData["Title"] = "Contact";
}

<!-- HEADER -->
<section class="text-center py-5" style="background-color:#06281e;">
    <div class="container">
        <h1 class="text-yellow fw-bold mb-3">Contact Us</h1>
        <p class="lead text-light">
            We’d love to hear from you — whether it’s a question, blessing, or prayer request.
        </p>
    </div>
</section>

<!-- CONTACT DETAILS + MAP SIDE BY SIDE -->
<section class="py-5 bg-deepgreen text-center">
    <div class="container">
        <div class="row align-items-center g-5">

            <!-- Temple Info (no card) -->
            <div class="col-md-6 text-start" data-aos="fade-right">
                <h3 class="text-yellow fw-bold mb-4">Temple Information</h3>

                <p class="text-light mb-3 fs-5">
                    <i class="fas fa-map-marker-alt text-yellow me-2"></i>
                    <strong>890 Vusi Mzimela Road</strong><br />
                    Cato Manor, Durban
                </p>

                <p class="text-light mb-3 fs-5">
                    <i class="fas fa-phone text-yellow me-2"></i>
                    031 261 6509
                </p>

                <p class="text-light mb-4 fs-5">
                    <i class="fas fa-envelope text-yellow me-2"></i>
                    <a href="mailto:umbilotemple@gmail.com" class="text-yellow text-decoration-none">
                        umbilotemple@gmail.com
                    </a>
                </p>

                <hr class="border-light" />

                <p class="small text-muted fst-italic mb-0">
                    The Umbilo Shree Ambalavaanar Alayam — serving the community of Durban with faith,
                    culture, and compassion.
                </p>
            </div>

            <!-- Map -->
            <div class="col-md-6" data-aos="fade-left">
                <div class="ratio ratio-4x3 rounded shadow-lg border border-yellow">
                    <iframe
                        src="https://www.google.com/maps?q=890%20Vusi%20Mzimela%20Road%20Cato%20Manor%20Durban&output=embed"
                        width="100%" height="100%" style="border:0;" allowfullscreen loading="lazy">
                    </iframe>
                </div>
            </div>

        </div>
    </div>
</section>
