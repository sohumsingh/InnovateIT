@model UmbiloTemple.Models.GalleryImage
@{
    ViewData["Title"] = "Upload Image";
}

<section class="py-5 text-center" style="background-color:#06281e;">
    <div class="container">
        <h1 class="text-yellow fw-bold mb-3">Upload New Gallery Image</h1>
        <p class="lead">Select an image to add to the temple gallery.</p>
    </div>
</section>

<section class="py-5">
    <div class="container" style="max-width:600px;">
        <div class="card p-4 shadow-lg border-0 bg-deepgreen text-white">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3 text-start">
                    <label class="form-label text-yellow">Title</label>
                    <input type="text" name="Title" class="form-control" required />
                </div>
                <div class="mb-3 text-start">
                    <label class="form-label text-yellow">Description</label>
                    <textarea name="Description" class="form-control" rows="3"></textarea>
                </div>
                <div class="mb-3 text-start">
                    <label class="form-label text-yellow">Upload Image</label>
                    <input type="file" name="imageFile" class="form-control" accept="image/*" required />
                </div>
                <button type="submit" class="btn btn-temple w-100 mt-2">Upload Image</button>
            </form>
        </div>
    </div>
</section>

