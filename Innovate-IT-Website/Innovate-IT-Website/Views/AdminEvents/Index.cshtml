@model IEnumerable<UmbiloTemple.Models.Event>
@{
    ViewData["Title"] = "Manage Events";
}

<section class="py-5 text-center" style="background-color:#06281e;">
    <div class="container">
        <h1 class="text-yellow fw-bold mb-3">Manage Temple Events</h1>
        <p class="lead">Add, view, or delete upcoming temple events.</p>
        <a href="/AdminEvents/Add" class="btn btn-temple mt-3"><i class="fas fa-plus-circle me-2"></i>Add Event</a>
    </div>
</section>

<section class="py-5">
    <div class="container">
        @if (Model != null && Model.Any())
        {
            <table class="table table-dark table-striped align-middle shadow">
                <thead>
                    <tr class="text-yellow">
                        <th>Title</th>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model)
                    {
                        <tr>
                            <td>@e.Title</td>
                            <td>@e.Date.ToString("dd MMM yyyy")</td>
                            <td>@e.Description</td>
                            <td><img src="@e.ImageUrl" width="100" class="rounded shadow-sm" /></td>
                            <td>
                                <a href="/AdminEvents/Delete?id=@e.Id" class="btn btn-sm btn-danger"
                                   onclick="return confirm('Are you sure you want to delete this event?')">
                                   <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center">
                <i class="fas fa-calendar-times fa-3x text-yellow mb-3"></i>
                <h4>No events have been added yet.</h4>
            </div>
        }
    </div>
</section>
