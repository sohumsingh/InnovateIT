<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_gradient_events">

    <TextView
        android:id="@+id/tvFirewalkingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Firewalking"
        android:textSize="26sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_header"
        android:gravity="center"
        android:padding="12dp"
        android:layout_margin="16dp"
        android:textColor="@android:color/black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="16dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="72dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvFirewalkingDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 Sept 2024"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@android:color/white"
                android:padding="8dp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvFirewalkingTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4 pm"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@android:color/white"
                android:padding="8dp"
                android:layout_marginBottom="16dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_events"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upload Documents"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/btnUploadDocument"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="+"
                        android:textSize="24sp"
                        android:background="@drawable/rounded_button" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/documentsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Include the navigation bar -->
    <include layout="@layout/navigation_bar" />
</LinearLayout> 