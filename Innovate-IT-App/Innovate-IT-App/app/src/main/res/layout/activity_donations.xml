<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_gradient_donations">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="false"
        android:clipToPadding="false"
        android:paddingBottom="120dp"
        android:overScrollMode="always">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header with Logo and Back Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/temple_gold"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:elevation="4dp">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_back_arrow"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back"
                    android:padding="8dp" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/temple_logo_nataraja"
                    android:contentDescription="Temple Logo"
                    android:layout_marginStart="8dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DONATIONS"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EFT"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="invisible" />
            </LinearLayout>

            <!-- Bank Accounts Container -->
            <LinearLayout
                android:id="@+id/bankAccountsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <!-- Bank account cards will be added dynamically here -->
            </LinearLayout>

            <!-- Note about reference -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please use your name and prayer type as reference when making the EFT transfer."
                android:textSize="15sp"
                android:textColor="@color/temple_gold_light"
                android:textStyle="italic"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:gravity="center" />

        </LinearLayout>
    </ScrollView>

    <!-- Include the navigation bar -->
    <include layout="@layout/navigation_bar" />
</LinearLayout>
