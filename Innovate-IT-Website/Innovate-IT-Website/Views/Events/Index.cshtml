@model IEnumerable<UmbiloTemple.Models.Event>
@{
    ViewData["Title"] = "Events";
}

<!-- Page Header -->
<section class="text-center py-5" style="background-color:#06281e;">
    <div class="container">
        <h1 class="text-yellow fw-bold mb-3">Temple Events</h1>
        <p class="lead">Experience our festivals, prayers, and celebrations throughout the year.</p>
    </div>
</section>

<!-- Events Grid -->
<section class="py-5">
    <div class="container">
        @if (Model != null && Model.Any())
        {
            <div class="row g-4">
                @foreach (var e in Model)
                {
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm event-card border-0">
                            <img src="@e.ImageUrl" class="card-img-top" alt="@e.Title" style="height:220px; object-fit:cover;">
                            <div class="card-body">
                                <h5 class="card-title text-yellow fw-bold">@e.Title</h5>
                                <p class="small text-muted">@e.Date.ToString("dd MMMM yyyy")</p>
                                <p>@e.Description</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-calendar-times fa-3x text-yellow mb-3"></i>
                <h4>No events are currently available.</h4>
                <p class="text-muted">Please check back later or follow us for updates.</p>
            </div>
        }
    </div>
</section>

<!-- CTA Section -->
<section class="py-5 bg-darker text-center">
    <div class="container">
        <h3 class="text-yellow fw-bold">Stay Connected</h3>
        <p class="lead">Join us for prayers, celebrations, and community service events.</p>
        <a href="/Contact" class="btn btn-temple mt-2">Contact Us</a>
    </div>
</section>

@section Scripts {
    <script>
        // Optional subtle card hover animation
        document.querySelectorAll('.event-card').forEach(card => {
            card.addEventListener('mouseover', () => {
                card.style.transform = 'translateY(-5px)';
                card.style.transition = '0.3s';
            });
            card.addEventListener('mouseleave', () => {
                card.style.transform = 'translateY(0)';
            });
        });
    </script>
}
