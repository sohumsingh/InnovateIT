<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/ivDocumentIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_events"
            android:contentDescription="Document icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvDocumentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Document Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_on_bg"
                android:fontFamily="sans-serif-medium"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tvDocumentDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="01 Jan 2023, 12:00"
                android:textSize="12sp"
                android:textColor="@color/text_secondary_on_bg"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDocumentType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PDF"
            android:textStyle="bold"
            android:padding="4dp"
            android:background="#DDDDDD"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
</androidx.cardview.widget.CardView> 